<Window x:Class="AlgorithmLab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgorithmLab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="Выберете что вы хотите выполнить" HorizontalAlignment="Center"  FontSize="40"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="FractalButton" Click="FractalButton_Click" Content="Фракталы" HorizontalAlignment="Left" Margin="150 0 190 0" FontSize="40"></Button>
                    <Button x:Name="HoannoiTownButton" Click="HoannoiButton_Click" Content="Ханойские башни" HorizontalAlignment="Right" FontSize="40"></Button>
                </StackPanel>
            </StackPanel>

           
            <Frame x:Name="frame" Grid.Row="1"/>
        </DockPanel>
    </Grid>
</Window>
